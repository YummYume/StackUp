<div class="card bg-base-100 shadow-xl">
    <div class="card-title justify-between p-8 pb-0 flex-col sm:flex-row">
        <div class="capitalize">
            {% block header %}

            {% endblock %}
        </div>
        {% if link is not null %}
            <a class="flex items-center gap-3 hover:gap-6 text-secondary mr-2 hover:mr-0 transition-all" href="{{ link }}"><span>{{ moreText }}</span>{% include "icon/arrow-right.html.twig" %}</a>
        {% endif %}
    </div>
    <div class="card-body">
        {% for item in items %}
            {% block item %}
                {{ component('listItem', { index: loop.index, item }) }}
            {% endblock %}
        {% else %}
            {{ 'common.no_result'|trans }}
        {% endfor %}
    </div>
</div>
