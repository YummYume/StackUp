<div id="category-add-form">
    <input type="checkbox" id="add-category-modal" class="modal-toggle" />
    <label class="modal modal-bottom cursor-pointer sm:modal-middle" for="add-category-modal">
        <label class="modal-box relative" for="">
            <label aria-label="{{ "common.close"|trans }}" for="add-category-modal" class="btn-sm btn-circle btn absolute right-2 top-2">{% include "icon/x-mark.html.twig" %}</label>
            <div>
                {{ form_start(categoryForm) }}

                <h3 class="text-lg font-bold">
                    {{ "page.create_tech.add_category"|trans }}
                </h3>

                <p class="my-4">
                    {{ "page.create_tech.add_category.description"|trans }}
                </p>

                <div id="category-add-form-inner">
                    {{ form_row(categoryForm.name, { attr: { class: 'input input-bordered w-full' }}) }}
                    {{ form_row(categoryForm._token) }}
                </div>

                {{ component("button", { content: "common.add"|trans, submit: true }) }}

                {{ form_end(categoryForm) }}
            </div>
        </label>
    </label>
</div>
